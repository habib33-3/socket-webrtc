{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    
    // ⬅️ ADD THIS LINE
    "noEmit": true, 
    
    // Now you can safely use 'allowImportingTsExtensions'
    "allowImportingTsExtensions": true, 
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}